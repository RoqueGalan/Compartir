<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Soumaya</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Museo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> Usuarios y Permisos<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">Áreas</li>
                            <li>@Html.ActionLink("Departamentos", "Index", "Departamento")</li>
                            <li>@Html.ActionLink("Puestos", "Index", "Puesto")</li>
                            <li class="dropdown-header">Configuración de Permisos</li>
                            <li>@Html.ActionLink("Tipos de Permisos", "Index", "TipoPermiso")</li>
                            <li>@Html.ActionLink("Permisos", "Index", "Permiso")</li>
                            <li class="dropdown-header">Usuarios</li>
                            <li>@Html.ActionLink("Usuarios", "Index", "Usuario")</li>
                        </ul>
                    </li>


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-tower"></i> Obras y Atributos<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Atributos", "Index", "Atributo")</li>
                            <li>@Html.ActionLink("Estructura de Piezas", "Index", "Estructura")</li>
                            <li>@Html.ActionLink("Lista de Catalogos", "Index", "Lista")</li>
                            <li>@Html.ActionLink("Obras", "Index", "Obra")</li>
                            <li>@Html.ActionLink("Piezas de Obras", "Index", "Pieza")</li>
                            <li>@Html.ActionLink("Propietarios", "Index", "Propietario")</li>
                            <li>@Html.ActionLink("Tipos de Adquisiciones", "Index", "TipoAdquisicion")</li>
                            <li>@Html.ActionLink("Tipos de Atributo", "Index", "TipoAtributo")</li>
                            <li>@Html.ActionLink("Tipos de Obra", "Index", "TipoObra")</li>
                            <li>@Html.ActionLink("Tipos de Piezas", "Index", "TipoPieza")</li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Museo Soumaya</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
