@model MuseoRecord_v1.Models.Puesto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Puesto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Departamento.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departamento.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Permisos)
        </dt>

        <dd>
            <ul>
                @foreach (var item in Model.Permisos)
                {
                    <li>@item.TipoPermiso.Nombre</li>
                }
            </ul>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Usuarios)
        </dt>

        <dd>
            <ul>
                @foreach (var item in Model.Usuarios)
                {
                    <li>@item.Apellido, @item.Nombre</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PuestoID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
